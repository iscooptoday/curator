
<%= form_for @link, html: { multipart: true } do |f| %>
  <% if @link.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@link.errors.count, "error") %> prohibited this link from being saved:</h2>

      <ul>
      <% @link.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.collection_select :topic_id, current_user.topics, :id , :description %><br><br>

  <div class="form-group">
    <%= f.label :personal_note %>
    <%= f.text_area :description, class: "form-control",placeholder:" Say something here if you want",:autofocus => true %>
  </div>

  


  <div class="form">
    <%= f.label :url_1 %>
    <%= f.text_field :url, class: "uri",:autofocus => true %><a href="#" class="create">Create</a>
  </div>

  <div class="result"></div>

  
  <script language="javascript" type="text/javascript">
   $('.create').on('click', function () {
    var url = $('.uri').val();

    var $a = $('<a href="' + url + '"></a>');
    $('.result').empty().append($a);

    embedly('card', $a[0]);
    return false;
});

</script>

