


<p id="notice"><%= notice %></p>

  <div align="center">
  <h2> <%=@topic.description %></h2>
  by <b style="color:red"><%=@topic.author %></b><br>
  
  published <b style="color:red"><%= @topic.frequency if @topic.frequency %></b> in the <b style="color:red"><%= @topic.time if @topic.time %></b>


  </div><br><br>
  
  <p> <%=@topic.welcome_message %></p>
  
  <% if current_user.follows?(@topic) %>  

  <%= form_for(@topic, url: topic_path(@topic)) do |f| %>
  
  <div class = "actions"> <%= f.submit "UnFollow", class: "btn btn-default btn-lg" %> </div>
  <% end %> <br> 
     
   <% else %>
  
  <%= form_for(@topic, url: topic_path(@topic)) do |f| %>
  <div class = "actions"> <%= f.submit "Follow" ,class: "btn btn-default btn-lg" %> </div>
  <% end %> <br>

<% end %> 

<div>

<h3>followers</h3>
<B style="color:blue"><%=@topic.followers(User).count %></B>
</div><br><br>
    
  
<% @topic.links.order("created_at DESC").each do |l| %>



<div>
<p style="font-family:tahoma;color:#7f8c8d;margin-left:0px"> posted <%= time_ago_in_words(l.created_at ) %> ago</p>
</div>


 <div>
<p style="font-size:16px"><%= @topic.author %><br>
	<%= @topic.description %> Newsletter </p> 
</div> <br>

<%= render_sir_trevor(l.stuff) %>

<hr>

<% end %>






