

 



<%= form_for (@topic) do |f| %>
  <% if @topic.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@topic.errors.count, "error") %> prohibited this topic from being saved:</h2>

      <ul>
      <% @topic.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :description, class: "form-control",placeholder:" what do you want to call it. no spaces and needs to be unique",:autofocus => true %>
  </div>


  <div class="form-group">
       <%= f.label :frequency %>
       <%= f.text_field :frequency, class: "form-control", placeholder:"Let your them know how often you will be publishing..dily, weekly etc" ,:autofocus => true %>
     </div>

      <div class="form-group">
    <%= f.label :category %>
    <%= f.text_field :tag_list, class: "form-control",placeholder:"eg fashion..one word only",:autofocus => true %>
  </div>

  <div class="form-group">
    <%= f.label :Your_Name %>
    <%= f.text_field :author, class: "form-control",placeholder:"your full name.this is searchable",:autofocus => true %>
  </div>

  

  <div class="form-group">
    <%= f.label :Welcome_Message_for_followers %>
    <%= f.text_field :welcome_message, class: "form-control",placeholder:"about you and what you gna write about..content here show up on search results ",:autofocus => true %>
  </div>


  
  
  <div class="actions">
    <%= f.submit "CREATE PAGE", class: "btn btn-primary" %>
  </div>
<% end %>


